{
  "name": "barefoot-nomad",
  "version": "1.0.0",
  "description": "Make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && babel src -s -d dist --copy-files",
    "dev": "concurrently -k \"npm run start:dev\"",
    "start": "npm run build && node dist/index.js",
    "start:dev": "nodemon --inspect=0.0.0.0:9229 --exec babel-node src/index.js",
    "heroku-postbuild": "npm run reverse && npm run migration && npm run seed",
    "lint": "eslint src/ --fix",
    "migration": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "reverse": "sequelize db:migrate:undo:all",
    "coveralls-coverage": "coveralls < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "test": "cross-env NODE_ENV=test mocha --require @babel/register src/test/index.js --timeout 20000 --exit"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "core-js": "^3.2.1",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mongoose": "^5.2.2",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "request": "^2.87.0",
    "sequelize": "^5.15.0",
    "sequelize-cli": "^5.5.0",
    "swagger-ui-express": "^4.0.7",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "expect.js": "^0.3.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1"
  },
  "engines": {
    "node": "10.0.0"
  }
}
